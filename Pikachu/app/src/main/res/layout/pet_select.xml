<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="皮卡丘"
            android:textColor="@color/grey"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/grey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_name"
                android:textColor="@color/grey"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/text_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="生日"
                android:textColor="@color/grey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pet_birthday"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_birthday"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_birthday"
                android:textColor="@color/grey"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/text_charac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="个性"
                android:textColor="@color/grey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pet_charac"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_charac"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_charac"
                android:textColor="@color/grey"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message">

        <ImageView
            android:id="@+id/select_img"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/select_edit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/select_img"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/edit" />

        <Switch
            android:id="@+id/select_switch"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignEnd="@+id/select_img"
            android:layout_below="@+id/select_img"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:checked="false" />

    </RelativeLayout>
</RelativeLayout>

